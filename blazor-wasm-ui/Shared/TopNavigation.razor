@* Top Navigation - Tab Switcher for Dashboard Tabs *@

<div class="mb-8">
    <div class="border-b border-neutral-200">
        <nav class="flex gap-8 list-none m-0 p-0">
            @foreach (var tab in Tabs)
            {
                <button
                    class="px-1 py-2 border-b-2 @(ActiveTab == tab.Id ? "border-neutral-900 text-neutral-900 font-medium" : "border-transparent text-neutral-600 hover:text-neutral-700 hover:border-neutral-300") bg-none text-sm cursor-pointer transition-all ease-in-out"
                    @onclick="@(() => OnTabChange.InvokeAsync(tab.Id))">
                    @tab.Label
                </button>
            }
        </nav>
    </div>
</div>

@code {
    [Parameter]
    public string ActiveTab { get; set; } = "active";

    [Parameter]
    public EventCallback<string> OnTabChange { get; set; }

    private List<TabItem> Tabs { get; set; } = new();

    protected override void OnInitialized()
    {
        Tabs = new List<TabItem>
        {
            new() { Id = "active", Label = "Available" },
            new() { Id = "returned", Label = "Returned" },
            new() { Id = "submitted", Label = "Submitted" },
            new() { Id = "reports-analytics", Label = "Reports & Analytics" }
        };
    }

    private class TabItem
    {
        public string Id { get; set; } = "";
        public string Label { get; set; } = "";
    }
}
