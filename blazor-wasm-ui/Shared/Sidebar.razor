        return new MarkupString(wrapper);
    }

    /// <summary>
    /// Generate CSS class for menu item
    /// </summary>
    private string GetMenuItemClass(bool isActive)
    {
        var baseClass = "w-full flex items-center ";
        var paddingClass = IsCollapsed ? "px-4 justify-center " : "px-6 ";
        var stateClass = "py-3 text-sm cursor-pointer transition-colors group relative ";
        var colorClass = isActive
            ? "text-white bg-neutral-900 border-r-2 border-neutral-900"
            : "text-neutral-600 hover:bg-neutral-50 hover:text-neutral-900";

        return baseClass + paddingClass + stateClass + colorClass;
    }

    /// <summary>
    /// The currently active menu item
    /// </summary>
    [Parameter]
    public string ActiveItem { get; set; } = "filings";

    /// <summary>
    /// Whether sidebar is in collapsed state
    /// </summary>
    [Parameter]
    public bool IsCollapsed { get; set; } = false;

    /// <summary>
    /// Callback when a menu item is clicked
    /// </summary>
    [Parameter]
    public EventCallback<string> OnItemClick { get; set; }

    /// <summary>
    /// Callback when sidebar collapse toggle is clicked
    /// </summary>
    [Parameter]
    public EventCallback OnToggleCollapse { get; set; }
}
