@* Sidebar navigation component - aligns with React Sidebar.tsx implementation *@

<nav class="@(IsCollapsed ? "w-16" : "w-64") bg-white border-r border-neutral-200 h-screen fixed left-0 top-0 transition-all duration-300 ease-in-out">
    <!-- Logo/Header -->
    <div class="@(IsCollapsed ? "px-4" : "px-6") py-4 border-b border-neutral-200 relative">
        <div class="flex items-center">
            <div class="flex items-center space-x-3">
                <span class="w-5 h-5 text-neutral-900 flex-shrink-0">@RenderIcon("Building2", false)</span>
                @if (!IsCollapsed)
                {
                    <span class="text-lg text-neutral-900">Financial Authority</span>
                }
            </div>
            <button
                @onclick="@(async () => await OnToggleCollapse.InvokeAsync())"
                class="absolute right-4 top-1/2 transform -translate-y-1/2 p-1 rounded-md hover:bg-neutral-100 transition-colors"
                aria-label="@(IsCollapsed ? "Expand sidebar" : "Collapse sidebar")"
            >
                @if (IsCollapsed)
                {
                    @RenderIcon("ChevronRight")
                }
                else
                {
                    @RenderIcon("ChevronLeft")
                }
            </button>
        </div>
    </div>

    <!-- Navigation Menu -->
    <div class="py-4">
        <ul class="space-y-1">
            @foreach (var item in MenuItems)
            {
                var isActive = ActiveItem.ToLower() == item.Id;
                <li>
                    <button
                        @onclick="@(async () => await OnItemClick.InvokeAsync(item.Id))"
                        class="@GetMenuItemClass(isActive)"
                        title="@(IsCollapsed ? item.Label : "")"
                    >
                        @if (!IsCollapsed)
                        {
                            @RenderIcon(item.IconName, true)
                        }
                        else
                        {
                            <span class="w-5 h-5 flex-shrink-0">@RenderIcon(item.IconName, false)</span>
                        }
                        @if (!IsCollapsed)
                        {
                            <span class="transition-opacity duration-200">@item.Label</span>
                        }
                        @if (IsCollapsed)
                        {
                            <div class="absolute left-full ml-2 px-2 py-1 bg-neutral-900 text-white text-xs rounded opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 whitespace-nowrap z-50">
                                @item.Label
                            </div>
                        }
                    </button>
                </li>
            }
        </ul>
    </div>
</nav>

@code {
