@page "/payment/{id}"
@using blazor_wasm_ui.Models
@using blazor_wasm_ui.Services
@inject NavigationManager NavigationManager
@inject IReturnsDataService ReturnsDataService

<div class="w-full min-h-screen bg-neutral-50">
    <div class="px-6 py-8 max-w-4xl mx-auto">
        <div class="mb-4">
            <a href="javascript:history.back()" class="text-blue-600 hover:underline text-sm">
                &larr; Back
            </a>
        </div>

        @if (Loading)
        {
            <div class="text-center py-12">
                <p class="text-neutral-600">Loading payment details...</p>
            </div>
        }
        else if (ReturnData == null)
        {
            <div class="bg-white border border-red-200 rounded-lg p-6 text-center">
                <p class="text-red-700 font-medium mb-4">Filing not found</p>
                <p class="text-neutral-600 mb-4">The filing information could not be loaded.</p>
                <button 
                    @onclick="@HandleBack"
                    class="btn btn-primary">
                    Back to Filings
                </button>
            </div>
        }
        else
        {
            <div class="space-y-6">
                <!-- Header -->
                <div>
                    <h1 class="text-3xl font-semibold text-neutral-900 mb-2">Payment</h1>
                    <p class="text-neutral-600">Complete payment for your extension request</p>
                </div>

                <!-- Step Indicator -->
                <div class="flex items-center justify-between">
                    <div class="flex items-center flex-1">
                        <div class="w-8 h-8 rounded-full flex items-center justify-center font-semibold text-sm bg-green-500 text-white mr-3">
                            âœ“
                        </div>
                        <span class="text-sm font-medium">Request Details</span>
                        <div class="flex-1 h-1 bg-neutral-300 mx-4"></div>
                    </div>
                    <div class="flex items-center flex-1">
                        <div class="w-8 h-8 rounded-full flex items-center justify-center font-semibold text-sm bg-blue-500 text-white mr-3">
                            2
                        </div>
                        <span class="text-sm font-medium">Payment</span>
                        <div class="flex-1 h-1 bg-neutral-300 mx-4"></div>
                    </div>
                    <div class="flex items-center">
                        <div class="w-8 h-8 rounded-full flex items-center justify-center font-semibold text-sm bg-neutral-300 text-neutral-700 mr-3">
                            3
                        </div>
                        <span class="text-sm font-medium">Confirmation</span>
                    </div>
                </div>

                <!-- Filing Summary -->
                <div class="bg-white border border-neutral-200 rounded-lg p-6 shadow-sm">
                    <h2 class="text-lg font-semibold text-neutral-900 mb-4">Filing Summary</h2>
                    <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
                        <div>
                            <p class="text-xs text-neutral-600 uppercase tracking-wide">Fund Name</p>
                            <p class="font-medium text-neutral-900">@ReturnData.FundName</p>
                        </div>
                        <div>
                            <p class="text-xs text-neutral-600 uppercase tracking-wide">Entity ID</p>
                            <p class="font-medium text-neutral-900">@ReturnData.EntityId</p>
                        </div>
                        <div>
                            <p class="text-xs text-neutral-600 uppercase tracking-wide">Period</p>
                            <p class="font-medium text-neutral-900">@ReturnData.Period</p>
                        </div>
                        <div>
                            <p class="text-xs text-neutral-600 uppercase tracking-wide">Due Date</p>
                            <p class="font-medium text-neutral-900">@ReturnData.DueDate</p>
                        </div>
                    </div>
                </div>

                <!-- Placeholder Content -->
                <div class="bg-white border border-neutral-200 rounded-lg p-8 text-center shadow-sm">
                    <div class="mb-6">
                        <div class="w-16 h-16 rounded-full bg-blue-100 flex items-center justify-center mx-auto mb-4">
                            <span class="text-2xl">ðŸ’³</span>
                        </div>
                        <h3 class="text-xl font-semibold text-neutral-900 mb-2">Payment Processing</h3>
                        <p class="text-neutral-600 mb-4">
                            Payment processing will be implemented in a future ticket.
                        </p>
                    </div>

                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
                        <p class="text-sm text-blue-900">
                            <strong>TODO:</strong> Integrate payment gateway (Stripe, Square, or other provider)
                        </p>
                    </div>

                    <div class="flex gap-3 justify-center">
                        <button 
                            @onclick="@HandleBack"
                            class="btn btn-secondary px-6 py-2">
                            Back
                        </button>
                        <button 
                            @onclick="@HandleContinueToConfirmation"
                            class="btn btn-primary px-6 py-2">
                            Continue (Mock)
                        </button>
                    </div>
                </div>

                <!-- Info Section -->
                <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
                    <p class="text-sm text-amber-900">
                        <strong>Note:</strong> This is a placeholder for the payment page. 
                        The actual payment integration will be implemented in a subsequent ticket.
                    </p>
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public string Id { get; set; }

    private FinancialReturn? ReturnData;
    private bool Loading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            ReturnData = await ReturnsDataService.GetReturnByIdAsync(Id);
            Loading = false;
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading return: {ex.Message}");
            Loading = false;
        }
    }

    private void HandleBack()
    {
        NavigationManager.NavigateTo("/filings");
    }

    private void HandleContinueToConfirmation()
    {
        // TODO: Implement actual payment processing
        // For now, this is a mock navigation
        NavigationManager.NavigateTo($"/confirmation/{Id}");
    }
}
